using Gtk 4.0;
using Adw 1;

template $GradiaScreenshotGuidePage : Adw.NavigationPage {
        name: "screenshot-guide";
        title: _("Screenshot Shortcut Guide");
        child: Adw.ToolbarView {
          [top]
          Adw.HeaderBar {
            show-back-button: true;
            show-title: false;
          }

          content: Gtk.ScrolledWindow {
            hscrollbar-policy: never;
            child: Adw.Clamp {
              maximum-size: 600;
              tightening-threshold: 400;
              child: Gtk.Box {
                orientation: vertical;
                spacing: 16;
                margin-top: 32;
                margin-bottom: 32;
                margin-start: 24;
                margin-end: 24;

                Gtk.Box header_box {
                  orientation: vertical;
                  spacing: 8;

                  Gtk.Label page_title {
                    label: _("Shortcut Setup Instructions");
                    styles ["title-1"]
                    halign: start;
                    wrap:true;
                  }
                }

                Gtk.Box content_box {
                  orientation: vertical;
                  spacing: 24;

                  Gtk.Label instruction_label {
                    label: _("If you'd like the app to <b>open automatically</b> after taking a screenshot, you can set up a custom keyboard shortcut:\n\n<b>Steps:</b>\n1. Go to <b>Settings</b> → <b>Keyboard</b> → <b>View and Customize Shortcuts</b> → <b>Custom Shortcuts</b>.\n2. Click the <b>+</b> button to create a new shortcut.\n3. Set the <b>Name</b> to something like <i>Open Gradia with Screenshot</i>.\n4. For the <b>Command</b>, copy one of the commands below:");
                    use-markup: true;
                    wrap: true;
                    halign: start;
                  }

                  Gtk.Box commands_section {
                    orientation: vertical;
                    spacing: 20;

                    Gtk.Box interactive_section {
                      orientation: vertical;
                      spacing: 12;

                      Gtk.Label interactive_title {
                        label: _("Interactive Screenshot");
                        styles ["title-4"]
                        halign: start;
                      }

                      Gtk.Label interactive_description {
                        label: _("Allows you to select an area to screenshot");
                        styles ["caption", "dimmed"]
                        halign: start;
                      }

                      Gtk.Entry interactive_entry {
                        editable: false;
                        text: "";
                        styles ["monospace"]
                        secondary-icon-name: "edit-copy-symbolic";
                        secondary-icon-tooltip-text: _("Copy to clipboard");
                      }
                    }

                    Gtk.Box fullscreen_section {
                      orientation: vertical;
                      spacing: 12;

                      Gtk.Label fullscreen_title {
                        label: _("Full Screen Screenshot");
                        styles ["title-4"]
                        halign: start;
                      }

                      Gtk.Label fullscreen_description {
                        label: _("Takes a screenshot of all screens instantly");
                        styles ["caption", "dimmed"]
                        halign: start;
                      }

                      Gtk.Entry fullscreen_entry {
                        editable: false;
                        text: "";
                        styles ["monospace"]
                        secondary-icon-name: "edit-copy-symbolic";
                        secondary-icon-tooltip-text: _("Copy to clipboard");
                      }
                    }
                  }

                  Gtk.Label final_label {
                    label: _("5. Assign a keyboard shortcut of your choice (<tt>Ctrl + Print</tt> should be free by default).");
                    use-markup: true;
                    wrap: true;
                    selectable: true;
                    halign: start;
                  }
                }
              };
            };
          };
        };
}
