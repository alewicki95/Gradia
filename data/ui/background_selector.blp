using Gtk 4.0;
using Adw 1;

template $GradiaBackgroundSelector : Adw.Bin {
  child: Gtk.Box container {
    orientation: vertical;

    Adw.ToggleGroup toggle_group {
      homogeneous: false;

      notify::active-name => $_on_group_changed();

      Adw.Toggle none_toggle {
        name: "none";
        label: _("_None");
        use-underline: true;
      }

      Adw.Toggle solid_toggle {
        name: "solid";
        label: _("_Solid");
        use-underline: true;
      }

      Adw.Toggle gradient_toggle {
        name: "gradient";
        label: _("_Gradient");
        use-underline: true;
      }

      Adw.Toggle image_toggle {
        name: "image";
        label: _("_Image");
        use-underline: true;
      }
      
      styles [
        "round"
      ]
    }
    Revealer stack_revealer {
      transition-type: slide_up;
      transition-duration: 250;
      Gtk.Stack stack {
        margin-top:12;
        transition-type: crossfade;
        transition-duration: 250;
        hexpand: true;
        valign: start;
      }
    }
  };
}
